<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_call_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/caller_background"
    android:visibility="visible">

    <TextView
        android:id="@+id/text_call_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_20"
        android:fontFamily="@font/sf_ui_display_light"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="@string/call_retry_info"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/text_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_call_retry"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_50"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:drawablePadding="@dimen/padding_12"
        android:fontFamily="@font/sf_ui_display_light"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="@string/action_cancel"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_13"
        app:drawableTopCompat="@drawable/ic_group_call_cancel" />

    <TextView
        android:id="@+id/text_call_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_call_retry"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_50"
        android:layout_marginBottom="@dimen/margin_20"
        android:drawablePadding="@dimen/padding_12"
        android:fontFamily="@font/sf_ui_display_light"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="@string/action_call_again"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_13"
        app:drawableTopCompat="@drawable/ic_group_video_call_again"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>